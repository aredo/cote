<script id="profileSetting" type="text/template">
  <div class="m-t-lg"></div>
  <form id="basicProfile" method="post" action="#" name="basicProfile" class="form-horizontal col-lg-8" novalidate="novalidate">
    <input type="hidden" name="user_id" value="{{_id}}">
    <div class="form-group">
      <label class="col-lg-2 control-label text-l-i">Username :</label>
      <div class="col-lg-5">
          <input type="text" name="username" value="{{username}}" class="form-control username">
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label text-l-i">Email :</label>
      <div class="col-lg-5">
          <input type="text" name="email" value="{{email}}" class="form-control email">
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label text-l-i">Firstname :</label>
      <div class="col-lg-5">
          <input type="text" name="firstname" value="{{firstname}}" class="form-control firstname">
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label text-l-i">Lastname :</label>
      <div class="col-lg-5">
          <input type="text" name="lastname" value="{{lastname}}" class="form-control lastname">
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label text-l-i">Gender :</label>
      <div class="col-lg-2">
        <label class="radio-inline radio i-checks">
        <input type="radio" name="gender" value="male" class="gender"><i></i>Male</label>
      </div>
      <div class="col-lg-2">
        <label class="radio-inline radio i-checks">
        <input type="radio" name="gender" value="female" class="gender"><i></i>Female</label>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label text-l-i">Country :</label>
      <div class="col-lg-8">
        <select placeholder="Choose Country" name="country" class="chosen-select form-control list-advertiser">
          <option value="">Choose Country :</option>
          <option value="ID">Indonesia</option>
          <option value="MY">Malaysia</option>
          <option value="SG">Singapore</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label text-l-i">Short Bio</label>
      <div class="col-lg-8">
        <textarea rows="6" placeholder="Ex : Social Media Celebrity, Accomplished Writer, Creativepreneur..." name="bio" class="form-control bio">{{{bio}}}</textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 text-right">
        <input type="submit" name="submit" value="Save" class="btn btn-s-lg btn-dark">
      </div>
    </div>
  </form>
  <div class="clearfix"></div>
</script>
